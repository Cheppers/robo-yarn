{
    "type": "robo-tasks",
    "name": "sweetchuck/robo-yarn",
    "description": "Robo task wrappers for Yarn commands",
    "keywords": [
        "robo-tasks",
        "yarn"
    ],
    "authors": [
        {
            "name": "DÃ¡vid Andor",
            "role": "Maintainer",
            "homepage": "https://github.com/Sweetchuck"
        }
    ],
    "support": {
        "source": "https://github.com/Sweetchuck/robo-yarn",
        "issues": "https://github.com/Sweetchuck/robo-yarn/issues"
    },
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "consolidation/robo": "^2.0",
        "icecave/semver": "^3.0",
        "mindscreen/yarnlock": "^1.0",
        "symfony/process": "^4.0"
    },
    "require-dev": {
        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "^1.1",
        "danielstjules/stringy": "^3.1",
        "mikey179/vfsstream": "^1.6",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/codeception-module-robo-task-runner": "^0.7",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.2",
        "sweetchuck/robo-phpcs": "^0.1",
        "symfony/error-handler": "^5.0",
        "symfony/finder": "^4.0",
        "webmozart/path-util": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Robo\\Yarn\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Robo\\Yarn\\Composer\\": "src-dev/Composer/",
            "Sweetchuck\\Robo\\Yarn\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Robo\\Yarn\\Tests\\Acceptance\\": "tests/acceptance/",
            "Sweetchuck\\Robo\\Yarn\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Sweetchuck\\Robo\\Yarn\\Composer\\Scripts::postInstallCmd"
        ],
        "post-update-cmd": [
            "\\Sweetchuck\\Robo\\Yarn\\Composer\\Scripts::postUpdateCmd"
        ]
    }
}
